<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @patient.name %>
</p>

<p>
  <strong>Age:</strong>
  <%= @patient.age %>
</p>
<ul>
<% @patient.appointments.each do |a| %>
	<li>
	<h3><%=a.readable_time%> -</h3>
	<%=link_to a.doctor.name ,doctor_path(a.doctor) %> 
	</li>
    
<%end%>
</ul>
<%= link_to 'Edit', edit_patient_path(@patient) %> |
<%= link_to 'Back', patients_path %>
